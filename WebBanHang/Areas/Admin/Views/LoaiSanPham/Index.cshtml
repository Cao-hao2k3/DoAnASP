@model IEnumerable<WebBanHang.Models.LoaiSanPham>

@{
    ViewData["Title"] = "Loại Sản Phẩm";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <p><a asp-action="Create" class="btn btn-primary">Thêm mới</a></p>
        <table class="table table-sm table-hover table-striped table-bordered mb-0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ID) </th>
                    <th>@Html.DisplayNameFor(model => model.TenLoai)</th>
                    <th width="5%">Sửa</th>
                    <th width="5%">Xóa</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var stt = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@Html.DisplayFor(modelItem => item.TenLoai)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                    stt++;
                }
            </tbody>
        </table>
    </div>
</div>