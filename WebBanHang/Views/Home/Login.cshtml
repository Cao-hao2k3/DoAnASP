@model WebBanHang.Models.DangNhap
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg" style="width: 400px;">
        <div class="card-header text-center bg-white border-0">
            <h3 class="fw-bold">Đăng nhập</h3>
            <p class="text-muted">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
        </div>
        <div class="card-body">
            @if (TempData["ThongBaoLoi"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fa-solid fa-triangle-exclamation"></i> @TempData["ThongBaoLoi"]
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label asp-for="TenDangNhap" class="form-label">Tài khoản</label>
                    <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tài khoản của bạn" />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="MatKhau" class="form-label">Mật khẩu</label>
                    <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu của bạn" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="DuyTriDangNhap" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
                    <a href="#" class="float-end text-decoration-none">Quên mật khẩu?</a>
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3">Đăng nhập</button>
                <div class="text-center my-2">— hoặc —</div>
                <button type="submit" class="btn btn-primary w-100 mb-3" asp-area="" asp-controller="DangKyTaiKhoan" asp-action="Index">Đăng ký</button>
                <a href="#" class="btn btn-primary w-100 mb-2" style="background-color: #3b5998;">
                    <i class="fab fa-facebook"></i> Login with Facebook
                </a>
                <a href="#" class="btn btn-info w-100 mb-2" style="background-color: #1da1f2;">
                    <i class="fab fa-twitter-square"></i> Login with Twitter
                </a>
                <a href="#" class="btn btn-danger w-100">
                    <i class="fab fa-google-plus-g"></i> Login with Google
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
