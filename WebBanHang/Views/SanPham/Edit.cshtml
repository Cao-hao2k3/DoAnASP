@model WebBanHang.Models.SanPham

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SanPham</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="HangSanXuatID" class="control-label"></label>
                <select asp-for="HangSanXuatID" class="form-control" asp-items="ViewBag.HangSanXuatID"></select>
                <span asp-validation-for="HangSanXuatID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiSanPhamID" class="control-label"></label>
                <select asp-for="LoaiSanPhamID" class="form-control" asp-items="ViewBag.LoaiSanPhamID"></select>
                <span asp-validation-for="LoaiSanPhamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenSanPham" class="control-label"></label>
                <input asp-for="TenSanPham" class="form-control" />
                <span asp-validation-for="TenSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KichCo" class="control-label"></label>
                <input asp-for="KichCo" class="form-control" />
                <span asp-validation-for="KichCo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <span class="d-block mb-2"><img src="~/uploads/@Model.HinhAnh" width="80" class="img-thumbnail" /></span>
                    <span class="d-block mb-2 mt-2 small text-danger">Bỏ trống nếu không muốn cập nhật ảnh mới!</span>
                }
                <label asp-for="DuLieuHinhAnh" class="control-label"></label>
                <input asp-for="DuLieuHinhAnh" accept="image/jpeg,image/gif,image/png,image/jpg" class="form-control" />
                <span asp-validation-for="DuLieuHinhAnh" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <textarea asp-for="MoTa" class="form-control"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

